{

	"manifest_version": 3,
	"name": "goodbye \"Zenkaku\" - さよなら全角英数",
	"version": "2.0.0",
	"description": "ページ内のすべての全角英数文字を半角に置換します。あの電話会社のプレスリリースも、あの新聞社のニュースサイトも、キレることなく快適に閲覧できるでしょう。",
	"action": {
		"default_icon": "res/icon_19_gray.png",
		"default_title":"さよなら全角英数",
		"default_popup":"popup.html"
	},
	"background" : {
		"service_worker": "js/background.js"
	},
	"content_scripts":[
		{
			"matches":["http://*/*","https://*/*","file:///*/*"],
			"css":["res/content.css"],
			"js":["lib/jquery-3.7.1.min.js","js/content.js"],
			"all_frames":true
		}
	],
	"icons":{
		"16":"res/icon_16.png",
		"48":"res/icon_48.png",
		"128":"res/icon_128.png"
	},
	"permissions":["tabs","storage"],
	"host_permissions": ["http://*/*", "https://*/*"],
	"options_page":"settings/index.html",
	"minimum_chrome_version":"88"
}
